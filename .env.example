# Discord Bot Token
DISCORD_TOKEN=tu_token_de_discord_aqui
# O también puedes usar:
# TOKEN=tu_token_de_discord_aqui

# MongoDB Connection URI
MONGODB_URI=mongodb://localhost:27017/sirgiobot
# O también puedes usar:
# MONGO_URI=mongodb://localhost:27017/sirgiobot

# Puerto para el servidor web (opcional, por defecto 5000)
PORT=5000

# Servidor de Discord (recomendado para multi-entorno)
# GUILD_ID=tu_guild_id

# Opcional: IDs de roles y canales (por defecto el bot usa los del config.js)
# LOG_CHANNEL_ID=
# MUTED_ROLE_ID=
# STAFF_ROLE_ID=
# STAFF_ROLE_IDS=id1,id2,id3
# TICKET_CATEGORY_ID=
# SUGGESTIONS_CHANNEL_ID=
# Canal de Discord donde llegan las notificaciones de YouTube (ID del canal)
# NOTIFICATION_CHANNEL_ID=1228731751006736426
# Rol a mencionar en las notificaciones (ID del rol)
# ROLE_TO_MENTION=

# Notificaciones de YouTube: obligatorio en Render para que funcionen.
# Usa los Channel IDs de YouTube (formato UC...), no la URL del canal.
# YOUTUBE_CHANNEL_1=UCxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# YOUTUBE_CHANNEL_2=UCxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
