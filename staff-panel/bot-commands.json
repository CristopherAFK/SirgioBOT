{
  "title": "Comandos del Bot - SirgioBOT",
  "slashCommands": {
    "moderacion": [
      {
        "command": "/sancion",
        "description": "Aplica una sanción a un usuario (warn/mute/ban)",
        "options": [
          { "name": "usuario", "type": "usuario", "required": true, "description": "Usuario a sancionar" },
          { "name": "tipo", "type": "opción", "required": true, "description": "Tipo de sanción", "choices": ["warn", "mute", "ban"] },
          { "name": "categoria", "type": "opción", "required": true, "description": "Categoría de la infracción", "choices": ["Flood", "Spam", "Wall of Text", "Bypass de AutoMod", "Vacío legal", "Romper Norma", "Hacks en eventos", "Bypass de palabras prohibidas", "Uso de canales incorrecto", "Mención de CP", "Hacer publicidad", "Perfil inapropiado/comprometido", "Amenaza", "Intento de Raid", "Ticket innecesario", "Seguridad", "Acoso", "Contenido NSFW", "Desinformación", "Trolleo", "Otro"] },
          { "name": "razon", "type": "texto", "required": true, "description": "Razón detallada de la sanción" },
          { "name": "tiempo", "type": "texto", "required": false, "description": "Duración (ej: 10m, 1h, 2d, 30d) - Solo para mute/ban" },
          { "name": "veces", "type": "número", "required": false, "description": "Veces que cometió la infracción" },
          { "name": "infracciones_adicionales", "type": "texto", "required": false, "description": "Otras infracciones cometidas (separadas por coma)" },
          { "name": "prueba", "type": "archivo", "required": false, "description": "Archivo de prueba (imagen/video)" }
        ],
        "permissions": "Helper: solo warn y mute | Moderador: warn, mute y ban | Admin/Owner: todo",
        "examples": [
          "/sancion usuario:@User tipo:warn categoria:Flood razon:Envió 20 mensajes seguidos",
          "/sancion usuario:@User tipo:mute categoria:Spam razon:Spam de links tiempo:30m",
          "/sancion usuario:@User tipo:ban categoria:Contenido NSFW razon:Contenido explícito reincidente tiempo:7d",
          "/sancion usuario:@User tipo:mute categoria:Acoso razon:Insultos graves a otro miembro tiempo:2h veces:2"
        ]
      },
